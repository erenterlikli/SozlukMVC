@model EntityLayer.Concrete.Category
@{
    Layout = null;
}

<!DOCTYPE html>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<br />
<center><h2>YENİ KATEGORİ EKLEME SAYFASI</h2></center>
<br />


@using (Html.BeginForm("AddCategory", "Category", FormMethod.Post)) //hangi action resulttan, hangi modelden, hangi methodla
{
    <div class="form-group">
        @Html.Label("Kategori Adı:")
        @Html.TextBoxFor(x=>x.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x=>x.CategoryName)
        <br />
        <br />
        @Html.Label("Açıklama:")
        @Html.TextBoxFor(x=>x.CategoryDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(x=>x.CategoryDescription)
        <br />
        <br />
        <button class="btn btn-primary">Kategori Ekle</button>
    </div>
}