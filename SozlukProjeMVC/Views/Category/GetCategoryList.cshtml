@using EntityLayer.Concrete
@model List<Category>
@{
    Layout = null;
}

<!DOCTYPE html>

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<center><h2>KATEGORİLER</h2></center>
<br />
<table class="table table-bordered">
    <tr>
        <th>Kategori Id</th>
        <th>Kategori Adı</th>
        <th>Durum</th>
    </tr>

  @foreach(var item in Model)
  {
      <tr>
          <td>@item.CategoryId</td>
          <td>@item.CategoryName</td>
          <td>@item.CategoryStatus</td>
      </tr>
  }
</table>
<br />
<a href="/Category/AddCategory/" class="btn btn-success">YENİ KATEGORİ EKLEME</a>